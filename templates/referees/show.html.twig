{% extends 'base.html.twig' %}

{% block title %}Referees{% endblock %}

{% block body %}
    <h1>Referees</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ referee.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ referee.name }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ referee.startDate }}</td>
            </tr>
            <tr>
                <th>Refereed matches: </th>
                {% for match in referee.matches %}
{#            <td>{{match.team1.name}} vs {{ match.team2.name }}</td>#}
                    <td>{{ match.getName() }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_referees_index') }}">back to list</a>

    <a href="{{ path('app_referees_edit', {'id': referee.id}) }}">edit</a>

    {{ include('referees/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Matches{% endblock %}

{% block body %}
    <h1>Matches</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>Competition id</th>
                <td>{{ match.competition }}</td>
            </tr>
            <tr>
                <th>{{ match.team1 }}</th>
                <td>{{ match.score1 }}</td>
            </tr>
            <tr>
                <th>{{ match.team2 }}</th>
                <td>{{ match.score2 }}</td>
            </tr>
            <tr>
                <th>Referees of the game</th>
                {% for referees in match.referees %}
                <td>{{ referees.name }}</td>
                {% endfor %}
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_matches_index') }}">back to list</a>

    <a href="{{ path('app_matches_edit', {'id': match.id}) }}">edit</a>

    {{ include('matches/_delete_form.html.twig') }}
{% endblock %}
